@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json; 
@{
    string windows_user = "";

    if (Context.Session.GetString("User") != null) {
        var user = JsonConvert.DeserializeObject<Models.LoginModel>(Context.Session.GetString("User"));
        windows_user = user.UserName;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/sitemap-solid.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css?v=1" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrgChart.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="nav-bar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
@*            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Organization Chart</a>
                <a class="nav-link text-dark" asp-area="" asp-page="/Hierarchy/Index">Hierarchy</a>
                <a class="nav-link text-dark" asp-area="" asp-page="/Locations/Index">Locations</a>
            </div>
            <small>@windows_user</small>*@
            <div class="container">
                <a class="navbar-brand text-dark" asp-page="/Index">Organization Chart</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Locations/Index">Locations</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Locations/Statistics">Statistics</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="header-spacer">
    </div>
    <div class="container-fluid">
        <main role="main" class="bg-white">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
@*        <div class="container">
            &copy; 2022 - Triple E Organization Chart
        </div>*@
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/font-awesome/js/all.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>